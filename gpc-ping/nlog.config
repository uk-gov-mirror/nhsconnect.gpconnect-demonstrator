<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- Console target with colored output -->
    <target xsi:type="ColoredConsole" 
            name="coloredConsole" 
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}">
      <!-- Different colors for different log levels -->
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Green" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

    <!-- File target for all logs -->
    <target xsi:type="File" 
            name="allfile" 
            fileName="logs/all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File target for JWT token logs specifically -->
    <target xsi:type="File" 
            name="jwtlogs" 
            fileName="logs/jwt-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- All logs, including from Microsoft -->
    <logger name="*" minlevel="Trace" writeTo="allfile,coloredConsole" />

    <!-- JWT specific logs - fixed filter configuration -->
    <logger name="*" minlevel="Info" writeTo="jwtlogs">
      <filters defaultAction="Log">
        <when condition="not contains('${message}', 'JWT')" action="Ignore" />
      </filters>
    </logger>

    <!-- BlackHole without writeTo -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
  </rules>
</nlog>
